<div class="content">
	<div class="data-form">
	  <form action="/users/create" method="POST">
		<h2>Create a New User:</h2>
		<div class="form-inputs">
			<div class="row">
				<label for="name">Name: * </label>
				<input
					type="text"
					name="name"
					id="name"
					required
				/>
			</div>
			<br />
			<div class="row">
				<label for = "email">Email: * </label>
				<input
					type="email"
					name="email"
					id="email"
					required
				/>
			</div>
			<br />
			<div class="row">
				<label for = "password">Password: * </label>
				<input
					type="text"
					name="password"
					id="password"
					required
				/>
			</div>
			<br />
		</div>
		<button type="submit"> Sign Up </button>
	  </form>
	</div>
	</div>