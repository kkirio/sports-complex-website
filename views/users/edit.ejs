<div class="content">
	<form action="<%=`/users/${user._id}/update?_method=PUT`%>" method="POST">
		<h2>Edit user information:</h2>
		<div class="data-form">
			<div class="form-inputs">
				<div class="row">
					<label for="name">Name: * </label>
					<input 
						type="text"
						name="name"
						id="name"
						value="<%=user.name%>"
						autofocus
						required>
				</div>
				<br />
				<div class="row">
					<label for="email">Email Address: * </label>
					<input
						type="text"
						name="email"
						id="email"
						value="<%=user.email%>"
						required>
				</div>
				<br />
				<div class="row">
					<label for="inputPassword">Password: * </label>
					<input type="password" name="password" id="inputPassword" required>
				</div>
			</div>
			<br />
			<label for="membership">Memberships(s): </label>
			<% if (user.membership.length < 1) { %>
				None
			<% } else { %>
			<ul>
				<% user.membership.forEach(m => { %>
					<% if (m) { %>
						<li>
							<span><a href="/memberships/<%= m._id %>">
								<%= m.type %>, <%= m.duration %> days</a>  
							</span>
						</li>
					<% } %>
				<% }) %>
			</ul>
			<% } %>
			<button type="submit"> Update </button>
		</div>
	</form>
</div>
