<div class="content">
<div class="data-form">
	<form action="/facilities/create" method="POST">
		<h2>Create a new facility:</h2>
		<div class="form-inputs">
			<div class="row">
				<label for="name ">Name: * </label>
				<input
				type="text"
				name="name"
				id="name"
				required
				autofocus
				/>
			</div>
			<br />
			<div class="row">
				<label for = "description">Description: * </label>
				<input
				type="text"
				name="description"
				id="description"
				required
				/>
			</div>
			<br />
			<div class="row">
				<label for = "type">Type: * </label>
				<input
				type="text"
				name="type"
				id="type"
				required
				/>
			</div>
			<br />
		</div>
		<button type="submit"> Create </button>
	</form>
</div>
</div>