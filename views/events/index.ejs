<div class="content">
	<div class="center">
		<h1>Events</h1>
		<% if (loggedIn) {
			if (currentUser.isAdmin) { %>
				<h4><a href="/events/new">Create a New Event</a></h4>
			<% }
		} %>
	</div>
	<table class="table">
		<thead>
			<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Date</th>
			<th>Location</th>
			</tr>
		</thead>
		<tbody>
			<% events.forEach(event => { %>
			<tr>
			<td><%= event.name %></td>
			<td><%= event.description %></td>
			<td><%= event.location %></td>
			<td><%= event.date.toDateString() %></td>
			<td><a href="<%= `/events/${event._id}`%>">View</a></td>
			<% if (loggedIn) {
				if (currentUser.isAdmin) { %>
					<td><a href="<%=`/events/${event._id}/edit` %>">Edit</a></td>
					<td>
						<a
						href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
						onclick="return confirm('Are you sure you want to delete this record?')"
						>Delete</a
						>
					</td>
				<% } %>
			<% } %>
			</tr>
			<% }); %>
		</tbody>
	</table>
</div>
